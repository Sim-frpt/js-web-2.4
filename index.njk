{# The main page of the application #}

{% extends "_common.njk" %}

{% block content %}
<p>
  <i class="fas fa-arrow-right"></i>
    <div id="container">
      <!-- display Modal -->
      <div class="modal fade" id="displayModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="characterCard">Modal title</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <div id="displayContent">

              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>

      <!-- character creation button -->
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#charCreationModal">
        Create your character
      </button>

      <!-- Character Creation Modal -->
      <div class="modal fade" id="charCreationModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Character Creation</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <div id="CreationContent">
                <form action="" id="creationForm">
                  Name of your character: <input type="text" name="inputName" id="addName"> <br>
                  <label for="addShortDescription">Short description:</label>
                  <textarea rows="3" cols="20" id="addShortDescription"></textarea> <br>
                  <label for="addDescription">Description:</label>
                  <textarea rows="3" cols="20" id="addDescription"></textarea> <br>
                </form>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal" id="closeCreator">Close</button>
              <button type="button" class="btn btn-primary" data-dismiss="modal" id="creationButton">Save changes</button>
            </div>
          </div>
        </div>
      </div>

      <!-- Edit Modal -->
      <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="editModalTitle">Edit your characters</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <div id="editContent">
                <form action="" id="editForm">
                  Name of your character: <input type="text" name="editName" id="editName"> <br>
                  <label for="editShortDescription">Short description:</label>
                  <textarea rows="3" cols="20" id="editShortDescription"></textarea> <br>
                  <label for="editDescription">Description:</label>
                  <textarea rows="3" cols="20" id="editDescription"></textarea> <br>
                </form>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary">Edit character</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  <i class="fas fa-arrow-left"></i>
</p>
{% endblock %}
